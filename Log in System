Scanner sc = new Scanner(System.in);

//Conditionals--Application
System.out.print("Enter username: ");
String username = sc.next();
System.out.print("Enter password: ");
String password = sc.next();

if(username.length() >= 8){
   if(username.equals("fcpcstudent1")){
       //ACTIVITY 1: LOGIN
       //Check password length
           //check password if equal to studentfcpc@2019
       if(password.length() >= 8){
           if(password.equals("studentfcpc@2019")){
               System.out.println("Login Successful!");
           }
           else{
               System.out.println("Incorrect password");
           }
       }
       else{
           System.out.println("Insufficient length.");
       }
   }
   else{
       System.out.println("Incorrect username.");
   }

}
else{
   System.out.println("Username insufficient length.");
}

